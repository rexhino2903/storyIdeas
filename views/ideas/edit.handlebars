<div class="card card-body">
    <h3>Edit Idea</h3>

    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="title">Idea Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Idea Title" value="{{idea.title}}">
        </div>
        <div class="form-group">
            <label for="details">Idea Details</label>
            <textarea name="details" class="form-control" id="details" rows="5">{{idea.details}}</textarea>
        </div>
        <button type="submit" class="btn btn-dark">Update</button>
    </form>

</div>