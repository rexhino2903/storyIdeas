<div class="card card-body">
    <h3>New Video Idea</h3>

    <form action="/ideas" method="post">
        <div class="form-group">
            <label for="title">Idea Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Idea Title" value="{{title}}">
        </div>
        <div class="form-group">
            <label for="details">Idea Details</label>
            <textarea name="details" class="form-control" id="details" rows="5">{{details}}</textarea>
        </div>
        <button style="background-color: #1E90FF; color:white;" type="submit" class="btn">Add</button>
    </form>

</div>